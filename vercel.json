{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/config",
      "dest": "/api/config.js",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/admin/login",
      "dest": "/api/admin/login.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/admin/update",
      "dest": "/api/admin/update.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/admin/links",
      "dest": "/api/admin/links.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/admin/leaderboard",
      "dest": "/api/admin/leaderboard.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/admin/reset",
      "dest": "/api/admin/reset.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/leaderboard",
      "dest": "/api/leaderboard.js",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/admin/(.*)",
      "dest": "/public/admin/$1"
    },
    {
      "src": "/admin",
      "dest": "/public/admin/index.html"
    },
    {
      "src": "/games",
      "dest": "/public/games.html"
    },
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
